{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "react",
    "types": [
      "astro/client",
      "preact"
    ],
    "lib": [
      "WebWorker"
    ],
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "esnext",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "exclude": [
    "./node_modules/**/*"
  ],
  "include": [
    "src"
  ]
}
